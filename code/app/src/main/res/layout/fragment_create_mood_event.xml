<?xml version="1.0" encoding="utf-8"?>
<!--
//Anthropic, Claude, "Generate source code descriptive comments for 301 rubric", 03-10-2025
This layout file defines the UI for creating a new mood event in the application.
It serves as a container that holds the mood event form fragment and navigation elements.

Components:
- AppBar: Displays the "Log Mood" title at the top of the screen
- MoodEventForm Fragment: Main form for entering mood event details including mood selection, 
  triggers, and other input fields
- BottomNavigationView: Provides access to main app sections, fixed at the bottom

Outstanding issues:
- Components may appear off-screen on smaller devices without proper scrolling
- MoodEventForm may require scrolling capability for smaller screens to show all elements
-->
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.CreateMoodEvent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Log Mood"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mood_event_form"
        android:name="com.kernelcrew.moodapp.ui.MoodEventForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
